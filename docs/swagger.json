{
    "swagger": "2.0",
    "info": {
        "description": "API for encoding and decoding short URLs.",
        "title": "URL Shortener API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8081",
    "basePath": "/",
    "paths": {
        "/url-shortener/encode": {
            "post": {
                "description": "Encode a given URL to a shortened version.",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "url-shortener"
                ],
                "summary": "Encode URL",
                "parameters": [
                    {
                        "description": "URL Input to be encoded",
                        "name": "input",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/httpurlshortener.EncodeURLInput"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/dto.EncodeURLResp"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/dto.EchoHttpErrorResp"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "$ref": "#/definitions/dto.EchoHttpErrorResp"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "dto.EchoHttpErrorResp": {
            "type": "object",
            "properties": {
                "message": {}
            }
        },
        "dto.EncodeURLResp": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                }
            }
        },
        "httpurlshortener.EncodeURLInput": {
            "type": "object",
            "required": [
                "url"
            ],
            "properties": {
                "url": {
                    "type": "string"
                }
            }
        }
    }
}